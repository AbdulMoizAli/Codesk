@model SignInViewModel

@{
    ViewData["Title"] = "Sign in";

    bool isSignInFailed = ViewData.ModelState.Keys.Contains("SignInFailed");
}

@if (isSignInFailed)
{
    <a hidden id="signin-failed"></a>
}

<div class="row valign-wrapper">
    <form asp-area="Users" asp-controller="Account" asp-action="SignIn" method="post" class="col l6 m8 s12 offset-l3 offset-m2">
        <div class="row">
            <div class="col l6 m8 s12 offset-l4">
                <img class="animate__animated animate__fadeIn" src="/images/login.svg" height="200" width="200" />
            </div>
        </div>

        <div class="animate__animated animate__fadeIn">
            <div class="row">
                <div class="input-field col l6 m12 s12 offset-l3">
                    <i class="fas fa-envelope-square prefix"></i>
                    <input asp-for="EmailAddress" class="validate" autocomplete="off" spellcheck="false" />
                    <label for="EmailAddress">Email Address</label>
                    <span asp-validation-for="EmailAddress" class="red-text right"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col l6 m12 s12 offset-l3">
                    <i class="fas fa-key prefix"></i>
                    <input asp-for="Password" class="validate" autocomplete="off" spellcheck="false" />
                    <label for="Password">Password</label>
                    <span asp-validation-for="Password" class="red-text right"></span>
                </div>
            </div>

            <div class="row">
                <div class="col l6 m12 s12 offset-l3">
                    <button type="submit" class="btn-floating btn-large waves-effect waves-light right green darken-1 tooltipped" data-position="bottom" data-tooltip="Sign In"><i class="fas fa-sign-in-alt"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#signin-failed').click(() => {
            showAlert('Sign in failed', 'Incorrect email address or password', false, 'OK');
        });

        $('#signin-failed').trigger('click');
    </script>
}